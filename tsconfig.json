{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "experimentalDecorators": true,
        "module": "ESNext",
        "target": "es2017",
        "sourceMap": true,
        "moduleResolution": "node",
        "importHelpers": true,
        "emitDecoratorMetadata": true,
        "noUnusedLocals": false
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"]
}
